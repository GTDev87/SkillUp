<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
                                   :default => "Edit #{model_class.model_name.human}") %></h1>
</div>

<%= labeled_form_for @user, { class: "edit_user" } do |f| %>
  
  <%= f.error_messages %>
  
  <%= f.text_field :username %>
  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  
  <%= f.thumb_image_field :avatar %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  <%= f.date_select :date_of_birth, :start_year => Date.today.year - 90, :end_year => Date.today.year - 12, :order => [:month, :day, :year]%>
  <%= f.text_field :address %>
  <%= f.text_area :bio, label: "About Me" %>
  
  <%= f.submit %>
<% end %>

<div class="form-actions">
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>