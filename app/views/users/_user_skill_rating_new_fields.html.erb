<fieldset>
  <div class="rating_ballot">
    <%= f.text_field :ratee_username%>
    <%= f.text_field :skill_title%>

    <%= f.label("rating_1", content_tag(:span, '1'), {:class=>"rating", :id=>"1"})%>
    <%= f.radio_button(:rating, 1, :class => 'rating_button')%>
    <%= f.label("rating_2", content_tag(:span, '2'), {:class=>"rating", :id=>"2"})%>
    <%= f.radio_button(:rating, 2, :class => 'rating_button')%>
    <%= f.label("rating_3", content_tag(:span, '3'), {:class=>"rating", :id=>"3"})%>
    <%= f.radio_button(:rating, 3, :class => 'rating_button')%>
    <%= f.label("rating_4", content_tag(:span, '4'), {:class=>"rating", :id=>"4"})%>
    <%= f.radio_button(:rating, 4, :class => 'rating_button')%>
    <%= f.label("rating_5", content_tag(:span, '5'), {:class=>"rating", :id=>"5"})%>
    <%= f.radio_button(:rating, 5, :class => 'rating_button')%>
    <%= f.hidden_field :_destroy %>

    </br>

    <%= link_to "remove", '#', class: "remove_fields" %>
  </div>
</fieldset>