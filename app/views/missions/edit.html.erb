<%- model_class = Mission -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
                                   :default => "Edit #{model_class.model_name.human}") %></h1>
</div>

<%= labeled_form_for @mission do |f| %>

  <%= f.text_field :title%>
  <%= f.text_area :description%>
  
  <%= f.submit %>
<% end %>