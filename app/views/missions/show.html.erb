<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @mission.title %>
</p>

<p>
  <b>Description:</b>
  <%= @mission.description %>
</p>

<p>
  <b>Sub Missions:</b><br />
  <% @mission.mission_embeddings.each do |mission_embedding| %>
    <% present mission_embedding do |mission_embedding_presenter| %>
      <%= mission_embedding_presenter.link %>: <%= mission_embedding_presenter.count %><br />
    <% end %>
  <% end %>
</p>

<p>
  <b>Ability Points:</b><br />
  <% @mission.total_ability_points.sort_by {|k,v| -v}.each do |title, points| %>
    <%= title %>: <%= points %><br />
  <% end %>
</p>

<p>
  <b>Skill Levels</b><br />
  <% @mission.skill_levels.sort_by {|k,v| -v}.each do |title, level| %>
    <%= title %>: Level <%= level %><br />
  <% end %>
</p>

<p>
  <b>Skill Points on Mission:</b><br />
  <% @mission.mission_skills.each do |mission_skill| %>
    <% present mission_skill do |mission_skill_presenter| %>
      <%= mission_skill_presenter.link %>: <%= mission_skill_presenter.points %><br />
    <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_mission_path(@mission) %> |
<%= link_to 'Back', missions_path %>
